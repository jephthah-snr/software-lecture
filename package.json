{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "boilerplate for couch backend",
  "main": "dist/server.js",
  "scripts": {
    "start:dev": "nodemon",
    "start": "node -r dotenv/config dist/server.js",
    "build": "tsc",
    "postbuild": "copyfiles -u 1 \"src/**/*.yaml\" dist",
    "prepare": "husky install",
    "test": "NODE_ENV=test jest --runInBand --passWithNoTests",
    "knex": "ts-node -r dotenv/config ./node_modules/knex/bin/cli.js",
    "db:migrate:make": "npm run knex -- migrate:make -x ts",
    "db:migrate": "npm run knex -- migrate:latest",
    "db:migrate:rollback": "npm run knex -- migrate:rollback",
    "db:seed:make": "npm run knex seed:make",
    "db:seed": "npm run knex -- seed:run",
    "lint": "eslint --ignore-path .eslintignore --ext .ts .",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "_moduleAliases": {
    "@": "./dist",
    "@shared": "./dist/shared",
    "@configurations": "./dist/configurations",
    "@database": "./dist/v1/database",
    "@modules": "./dist/v1/modules",
    "@v1": "./dist/v1"
  },
  "keywords": [
    "debit",
    "credit",
    "fintech",
    "cards",
    "9japay",
    "afl"
  ],
  "author": "Africa Fintech Limited",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^6.3.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.2.0",
    "fastify-tsconfig": "^1.0.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^3.0.1",
    "@types/bull": "^3.15.9",
    "axios": "^0.27.2",
    "bullmq": "^3.0.0",
    "crypto-js": "^4.1.1",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.0",
    "event-dispatch": "^0.4.1",
    "fastify": "^3.28.0",
    "fastify-cors": "^6.0.3",
    "fastify-net-acl": "^0.0.7",
    "fastify-plugin": "^3.0.1",
    "http-status": "^1.5.1",
    "ioredis": "^5.0.5",
    "jsonwebtoken": "^8.5.1",
    "knex": "^1.0.7",
    "module-alias": "^2.2.2",
    "ms": "^2.1.3",
    "objection": "^3.0.1",
    "pg": "^8.7.3",
    "pino": "^7.10.0",
    "randomatic": "^3.1.1",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.6.0",
    "uuid": "^9.0.0",
    "validatorjs": "^3.22.1"
  },
  "lint-staged": {
    "**/*.{js, ts}": [
      "npm run lint",
      "npx prettier --write"
    ]
  },
  "eslintIgnore": [
    "*.test.ts"
  ]
}
